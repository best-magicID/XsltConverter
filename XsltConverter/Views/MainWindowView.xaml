<Window x:Class="XsltConverter.Views.MainWindowView"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:vm="clr-namespace:XsltConverter.ViewModels"
        
        mc:Ignorable="d" 
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        Title="Xslt конвертер" 
        Height="450" 
        Width="900" 
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="0 0 0 2.5"/>
            <Setter Property="Padding"
                    Value="3"/>
        </Style>
        
    </Window.Resources>
    
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.16*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Первая часть-->
        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Grid.RowSpan="3"
                    HorizontalAlignment="Left">
            <Button Content="Выбрать XML файл"
                    Command="{Binding SelectFileCommand}"/>

            <Button Command="{Binding OpenReadChangeFileCommand}">
                <Button.Content>
                    <TextBlock Text="Обработать данные"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                </Button.Content>
            </Button>

            <Button Command="{Binding SaveFileCommand}">
                <Button.Content>
                    <TextBlock Text="Сохранить обработанные данные в новый XML файл"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                </Button.Content>
            </Button>

            <Button Command="{Binding AddItemInFileCommand}">
                <Button.Content>
                    <TextBlock Text="Добавить новое значение в исходный XML файл"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                </Button.Content>
            </Button>


        </StackPanel>

        <GridSplitter Grid.Row="0"
                      Grid.Column="1" 
                      Grid.RowSpan="3"
                      Width="5" 
                      HorizontalAlignment="Stretch" />
        
        <!--Вторая часть-->
        <DockPanel Grid.Row="0"
                   Grid.Column="2"
                   LastChildFill="True">

            <StackPanel Orientation="Horizontal" 
                        DockPanel.Dock="Top">

                <TextBlock Text="Сгруппированная информация "
                           Margin="5 0 0 0"/>

                <TextBlock Text="{Binding NameFile}"/>

            </StackPanel>

            <DataGrid Margin="5 0 0 0"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      AutoGenerateColumns="False"
                      ItemsSource="{Binding ListEmployeesInfoForYear}">
                <DataGrid.Columns>
                    <!--<DataGridTextColumn Header="№ " 
                                        Binding="{Binding Path=Name}"
                                        Width="Auto" 
                                        IsReadOnly="True"/>-->

                    <DataGridTextColumn Header="Имя" 
                                        Binding="{Binding Path=Name}"
                                        Width="Auto" 
                                        IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Фамилия" 
                                        Binding="{Binding Path=SurName}"
                                        Width="Auto" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Январь" 
                                        Binding="{Binding Path=AmountForJanuary}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Февраль" 
                                        Binding="{Binding Path=AmountForFebruary}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Март" 
                                        Binding="{Binding Path=AmountForMarch}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Апрель" 
                                        Binding="{Binding Path=AmountForApril}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Май" 
                                        Binding="{Binding Path=AmountForMay}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Июнь" 
                                        Binding="{Binding Path=AmountForJune}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Июль" 
                                        Binding="{Binding Path=AmountForJuly}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Август" 
                                        Binding="{Binding Path=AmountForAugust}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Сентябрь" 
                                        Binding="{Binding Path=AmountForSeptember}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Октябрь" 
                                        Binding="{Binding Path=AmountForOctober}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Ноябрь" 
                                        Binding="{Binding Path=AmountForNovember}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Декабрь" 
                                        Binding="{Binding Path=AmountForDecember}"
                                        Width="*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Год" 
                                        Binding="{Binding Path=AmountForYear}"
                                        Width="*" 
                                        IsReadOnly="True"/>


                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>


        <GridSplitter Grid.Row="1"
                      Grid.Column="2"
                      Height="5" 
                      HorizontalAlignment="Stretch"/>

        <!--Треться часть-->
        <DockPanel Grid.Row="3"
                   Grid.Column="2"
                   LastChildFill="True">

            <StackPanel Orientation="Horizontal" 
                        DockPanel.Dock="Top">

                <TextBlock Text="Построчная информация "
                           Margin="5 0 0 0"/>

                <TextBlock Text="{Binding NameFile}"/>

            </StackPanel>

            <DataGrid Margin="5 0 0 0"
                      ItemsSource="{Binding ListAllEmployees}"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"/>
        </DockPanel>

    </Grid>
</Window>
